<Window x:Class="Shop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop"
        mc:Ignorable="d"
        Title="Авторизация" Height="600" Width="500" ResizeMode="NoResize">
    <Grid Margin="0,0,-0.4,-0.6" Background="Black" RenderTransformOrigin="0.658,0.604" >
        <TextBlock Text="Authorization" Margin="80,85,225,453" Foreground="White"  FontSize =" 20" FontWeight="DemiBold"/>
        <TextBox x:Name="LoginTXT"  Margin="80,123,0,414" HorizontalAlignment="Left" Width="325" FontSize =" 15" FontWeight="Medium"  InputMethod.IsInputMethodEnabled="False" />
        <PasswordBox x:Name="PasswordTXT"  Margin="79,169,91,370" RenderTransformOrigin="0.5,0.5" FontSize =" 15" FontWeight="Medium"   InputMethod.IsInputMethodEnabled="False"/>
        <Button Margin="102,246,119,287" Click="btnLogin_Click" Background="Black" Content="Войти" Foreground="White" FontSize="20" FontWeight="DemiBold"></Button>
        <Button Margin="102,302,119,231" Background="Black" Content="Зарегестрироваться" Foreground="White" FontSize="20" FontWeight="DemiBold"></Button>

    </Grid>
</Window>
